<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver.DriverMainActivity">



    <ToggleButton
        android:id="@+id/driver_main_activity_toggle"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:textColor="#455A64"
        android:textOff="@string/driver_active"
        android:textOn="@string/driver_inactive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060000002"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/driver_fragment_frame"
        android:name="com.example.shuttlemobile.driver.DriverRideHistoryFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_driver_ride_history" />

</androidx.constraintlayout.widget.ConstraintLayout>